{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 120,
  "objectWrap": "collapse",
  "semi": true,
  "proseWrap": "always",
  "experimentalSortPackageJson": { "sortScripts": true },
  "experimentalSortImports": {},
  "ignorePatterns": [
    "package-lock.json",
    "pnpm-lock.yaml",
    ".husky/",
    "node_modules/",
    "dist/",
    "build/",
    ".out/",
    "*/.out/",
    "logs/",
    "*.log",
    "npm-debug.log*",
    "yarn-debug.log*",
    "yarn-error.log*",
    "pnpm-debug.log*",
    ".d.ts",
    ".env",
    ".env.*.local",
    ".DS_Store",
    "Thumbs.db",
    ".prettierignore",
    ".prettierrc",
    ".prettierrc.js",
    ".prettierrc.json",
    ".prettierrc.yaml",
    "coverage/",
    "*/coverage/",
    ".idea/",
    "*.bak",
    "*.swp",
    "*.swo",
    "*.swn",
    "*.orig",
    "*.rej",
    "*.md"
  ]
}
